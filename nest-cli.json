{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin",
        "options": {
          "classValidatorShim": true,
          "dtoFileNameSuffix": [".dto.ts", ".response.dto.ts"],
          "controllerFileNameSuffix": [".controller.ts"]
        }
      }
    ],
    "deleteOutDir": true
  }
}
